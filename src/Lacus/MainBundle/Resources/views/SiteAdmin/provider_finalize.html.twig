<form class="modal-form form-finalize" method="post" {{ form_enctype(form) }} action="{{ path('admin_lacus_main_site_provider_post',{'mapperId':post.mapper.id}) }}">
    <div class="modal-header">
        <h3>Post {{ post.mapper.name }}: {{ post.mapper.info }}</h3>
    </div>
    <div class="modal-body">

        {{ form_errors(form) }}

        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab-info" data-toggle="tab">Content</a></li>
                <li><a href="#tab-files" data-toggle="tab">Files</a></li>
                <li><a href="#tab-status" data-toggle="tab">Posting options</a></li>
                <li class="disabled"><a href="#">Status: <span class="label">{{ post.status }}</span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab-info">
                    {% for content_field in form.content %}
                        {{ form_row(content_field,{'attr':{'class':'input-block-level' }}) }}
                    {% endfor %}
                </div>
                <div class="tab-pane" id="tab-files">
                    {% for file_field in form.post_files %}
                        {{ form_row(file_field) }}
                    {% endfor %}
                </div>
                <div class="tab-pane" id="tab-status">
                    {{ form_row(form.status) }}
                </div>
            </div>
        </div>

        {{ form_rest(form) }}

    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>